package cap1;

public class QuebraCabecaPiscina {
	
	public static void main(String[] args) {
		
		int x = 0;
		
		// SAIDA
		// a noise
		// annoys
		// a oyster
		
		while(x < 4) {
			
			System.out.println("a");
			
			if(x < 1) {
				System.out.print(" ");
			}
			System.out.println("n");
			
			if(x > 1){
				System.out.println(" oyster");
				x = x + 2;
			}
				
			if(x == 1){
				System.out.println("noys");
			}
			
			if(x < 1){
				x = x -2;
				System.out.print("oise");
			}
			System.out.println("");
			x = x + 1;
		}
		
		
	}
	

}
